<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/main_padding"
    android:background="@color/application_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/language"
        android:textSize="@dimen/text_medium"
        android:id="@+id/textViewChangeLanguage"
        android:layout_marginBottom="@dimen/main_gap"
        android:layout_marginTop="@dimen/main_gap"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerLanguages"
        android:layout_marginBottom="@dimen/main_gap"
        android:layout_marginTop="@dimen/main_gap"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divider2"
        android:layout_below="@+id/spinnerLanguages"/>
</RelativeLayout>